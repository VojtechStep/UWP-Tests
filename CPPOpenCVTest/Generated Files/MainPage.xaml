<Page x:ConnectionId='1'
    x:Class="CPPOpenCVTest.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:OpenCVTest"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:devices="using:Windows.Devices.Enumeration"
    mc:Ignorable="d">

    <StackPanel Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <ComboBox x:ConnectionId='2' Name="Cameras" HorizontalAlignment="Left"                                                                         >
            <ComboBox.ItemTemplate>
                <DataTemplate                                       >
                    <TextBlock x:ConnectionId='4'                      />
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>
        <CaptureElement x:ConnectionId='3' Name="Preview" Stretch="UniformToFill" />
    </StackPanel>
</Page>

